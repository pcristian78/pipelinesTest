node {
    stage('Clone repo') {
        git 'https://github.com/pcristian78/maven-simple.git'
    }
    stage('List') {
        sh 'ls'
    }
    stage('Mail') {
        mail bcc: '', body: 'some body message', cc: '', from: 'pipelineCloneAndSendMail@github.com', replyTo: '', subject: 'test pipeline', to: 'pcristian78@gmail.com'
    }
}
